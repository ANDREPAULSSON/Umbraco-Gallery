@inherits Umbraco.Web.Mvc.UmbracoViewPage<Umbraco.Web.PublishedModels.Gallery>

@{
    Layout = "Master.cshtml";
}

<!-- Gallery -->
<section id="galleries">

    <!-- Photo Galleries -->
    <div class="gallery">

        <!-- Filters -->
        <header>
            <h1>@Model.Title</h1>
            <ul class="tabs">
                <li><a href="#" data-tag="all" class="button active">All</a></li>
                <li><a href="#" data-tag="people" class="button">People</a></li>
                <li><a href="#" data-tag="place" class="button">Places</a></li>
                <li><a href="#" data-tag="thing" class="button">Things</a></li>
            </ul>
        </header>

        @{
            var selection = Umbraco.Content(Guid.Parse("f542dcc2-e262-45bf-9493-5e3b33273e62"))
            .Children()
            .Where(x => x.IsVisible())
            .OrderByDescending(x => x.CreateDate);
        }

        <div class="content">
            @foreach (var item in selection)
            {
                var image = item.Value<IPublishedContent>("mainImage");
                var thumb = item.Value<IPublishedContent>("thumbnail");
                <div class="media all people">
                    <a href="@image.Url"><img src="@thumb.Url" alt="" title="@item.Name" /></a>
                </div>
            }

        </div>
    </div>
</section>
