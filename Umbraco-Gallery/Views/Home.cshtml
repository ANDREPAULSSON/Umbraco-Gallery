@inherits Umbraco.Web.Mvc.UmbracoViewPage<Umbraco.Web.PublishedModels.Home>

@{
    Layout = "Master.cshtml";
    var image = Model.Value<IPublishedContent>("mainImage");

}

    <!-- Banner -->
    <section id="banner" style="background-image: url(@image.Url);
">
        <div class="inner">
            <h1>@Model.Title</h1>
            <p>@Model.Subtitle</p>
            <ul class="actions">
                <li><a href="#galleries" class="button alt scrolly big">Continue</a></li>
            </ul>
            @{
                var myUser = Membership.GetUser();
                if (myUser != null)
                {
                    <span class="home-screen-user"><icon class="fa fa-user" style="margin-right:.3em;"></icon>@myUser.UserName</span>
                }
            }
        </div>
    </section>


    @Html.Partial("/Views/Partials/_GalleryPreview.cshtml")
